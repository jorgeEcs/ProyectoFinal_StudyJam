<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img7"
    tools:context="com.example.usuario.proyecto_gdg.MainActivity">

    <Button
        android:id="@+id/btn_canciones"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="CANCIONES"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/btn_recetas"
        android:textColor="@android:color/white"
        android:layout_marginLeft="80dp"
        android:background="@drawable/btn_voz"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:onClick="canciones"
        android:alpha="0.9"
        />

    <Button
        android:onClick="recetas"
        android:textStyle="bold"
        android:alpha="0.9"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="RECETAS"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_recetas"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_voz"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />


    <ImageView
        android:id="@+id/img_1"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/img2"
        android:layout_marginRight="3dp"
        android:alpha="1.0"
        android:layout_above="@id/btn_canciones"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
